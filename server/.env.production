# Production Environment Configuration for Brandastic.com

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
PORT=3001
NODE_ENV=production

# Security Configuration - Updated for brandastic.com
CORS_ORIGIN=https://brandastic.com,https://www.brandastic.com

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Google Calendar Integration
GOOGLE_CALENDAR_URL=https://calendar.app.google/dEeGiuDU7yuGVQJW8

# Feature Flags
ENABLE_CONVERSATION_LOGGING=true
ENABLE_ERROR_REPORTING=true

# Email Configuration (Optional - for production notifications)
EMAIL_FROM=noreply@brandastic.com
EMAIL_TO=info@brandastic.com

# Production Security
SESSION_SECRET=generate-a-secure-random-string-here
JWT_SECRET=generate-another-secure-random-string-here

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-if-using-error-tracking